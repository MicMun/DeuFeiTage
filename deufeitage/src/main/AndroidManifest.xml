<?xml version="1.0" encoding="utf-8"?>
<manifest package="de.micmun.android.deufeitage"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="de.micmun.android.deufeitage.FeiTagListActivity"
            android:label="@string/app_name"
            android:resizeableActivity="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="de.micmun.android.deufeitage.FeiTagDetailActivity"
            android:label="@string/title_feitag_detail"
            android:parentActivityName="de.micmun.android.deufeitage.FeiTagListActivity"
            android:resizeableActivity="true">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.micmun.android.deufeitage.FeiTagListActivity"/>
        </activity>
    </application>

</manifest>
